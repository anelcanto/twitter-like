<h1>Comments#new</h1>
<p>Find me in app/views/comments/new.html.erb</p>

<% title "New Comment"  %>
<%= bootstrap_form_with(model: @post, local: true) do |f| %>
    <%= f.text_area :content, hide_label: true, placeholder: "Type your tweet." %>
    <%= f.select :mood, ["Happy","Sad","Bored","Excited"], { label: "Choose your current mood:", wrapper: { class: 'has-warning', data: { foo: 'bar' } } }, { class: "selectpicker" } %>
    <%= f.select :country, ["USA","Japan","UK","Germany"], { label: "Choose your country of origin", wrapper: { class: 'has-warning', data: { foo: 'bar' } } }, { class: "selectpicker" } %>
    </br>
    <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
    <% end %>
