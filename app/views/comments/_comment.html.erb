<div class="card p-3 mt-2">
    <div class="d-flex justify-content-between align-items-end">
        <div class="user d-flex flex-row align-items-center">
            <img width="30" class="user-img rounded-circle mr-2" src="<%= current_user.avatar.attached? ? url_for(current_user.avatar) : "https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg" %>">    
            <small class="font-weight-bold text-primary ms-1"> @<%= comment.user.username %> </small>  
        </div>
        <small class="font-weight-bold text-secondary">Mood: <%= comment.mood %></small>
    </div>
    <div class="action d-flex justify-content-between mt-2 align-items-center">

        <div class="reply px-4">
            <%= comment.content %>
        </div>

        <div class="icons align-items-center">
            <i class="fa fa-check-circle-o check-icon text-primary "> <%= link_to "Show", post_comment_path(@post, comment), class:"text-decoration-none" %></i>
            <i class="fa fa-check-circle-o check-icon text-primary"> <%= link_to "Edit", edit_post_comment_path(@post, comment), class:"text-decoration-none link-secondary" %></i>
            <!--<i class="fa fa-star-o text-danger">Destroy</i>-->
            
        </div>
    </div>
</div>