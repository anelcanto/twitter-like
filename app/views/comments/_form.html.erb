<%= bootstrap_form_with(model: [@post, @comment], local: true) do |f| %>
    <%= f.text_area :content, hide_label: true, placeholder: "Type your tweet." %>
    <%= f.select :mood, ["Happy","Sad","Bored","Excited"], { label: "Choose your current mood:", wrapper: { class: 'has-warning', data: { foo: 'bar' } } }, { class: "selectpicker" } %>
    </br>
    <%= f.primary  @comment.persisted? ? 'Update':'Create' %>
<% end %>
