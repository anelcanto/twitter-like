<div class="card">
    <h5 class="card-header ">author: <%=@post.user.name %></h5>
    <div class="card-body">
        <h5 class="card-title d-flex justify-content-center">Mood: <%=@post.mood%> | Country: <%=@post.country%></h5>
        <p class="card-text d-flex justify-content-center"><%=@post.content%></h5>
        </p>
        <div id="switch" class="d-grid gap-2 d-md-flex justify-content-md-center">
            <%= link_to "Edit", edit_post_path(@post), class: "btn btn-primary"%>
            <%= button_to "Delete", @post, method: :delete, class: "btn btn-secondary btn-danger" %>
        </div>
    </div>
    
    <div class="container flex-row mb-3">
        <div class="row  d-flex justify-content-center">
            <div class="col-md-8">
                <div class="headings d-flex justify-content-between align-items-center mb-3">
                    <h5>Total Comments (<%= @post.comments.count %>)</h5>
                    <!--<div class="buttons">-->
                        <!--<a class="btn btn-primary" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="true" aria-controls="collapseExample">-->
                        <!--    Show comments-->
                        <!--</a>-->
                    <!--</div>-->
                </div>
                <!--Comments block start Here-->
                <div >
                <!--<div class="collapse" id="collapseExample">-->
                    <div class="card card-body">
                        
                        <%=render @post.comments%>
                        
                        <div class="d-md-flex justify-content-md-center mt-2">
                            <%= link_to "New comment", new_post_comment_path(@post), class: "btn btn-primary", type:"button" %>
                        </div>
                    </div>
                </div>
                 <!--Comments block end here Here-->
            </div>
        </div>
    </div>
</div>
<br>