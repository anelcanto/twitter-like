<div class="card">
    <h5 class="card-header ">Featured</h5>
    <div class="card-body">
        <h5 class="card-title d-flex justify-content-center">Mood: <%=@post.mood%> | Country: <%=@post.country%></h5>
        <p class="card-text d-flex justify-content-center"><%=@post.content%></h5>
        </p>
        <div id="switch" class="d-grid gap-2 d-md-flex justify-content-md-center">
            <%= link_to "Edit", edit_post_path(@post), class: "btn btn-primary"%>
            <%= button_to "Delete", @post, method: :delete, class: "btn btn-secondary btn-danger" %>
        </div>
    </div>
    
    <div class="container flex-row mb-3">
        <div class="row  d-flex justify-content-center">
            <div class="col-md-8">
                <div class="headings d-flex justify-content-between align-items-center mb-3">
                    <h5>Unread comments(6)</h5>
                    <div class="buttons">
                        <a class="btn btn-primary" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                            Show comments
                        </a>
                    </div>
                </div>
                <!--Comments block start Here-->
                <div class="collapse" id="collapseExample">
                    <div class="card card-body">
                        <% @post.comments.each do |comment| %>
                            <div class="card p-3 mt-2">
    
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="user d-flex flex-row align-items-center">
                                        <img src="https://i.imgur.com/0LKZQYM.jpg" width="30" class="user-img rounded-circle mr-2">
                                        <span><small class="font-weight-bold text-primary"> user_next_assignment</small> <small class="font-weight-bold">
                                            <%= comment.content %> 
                                        </small></span>
                                    </div>
                                    <!--<small>3 days ago</small>-->
                                </div>
                                <div class="action d-flex justify-content-between mt-2 align-items-center">
    
                                    <div class="reply px-4">
                                        <small>Remove</small>
                                        <span class="dots"></span>
                                        <small>Reply</small>
                                        <span class="dots"></span>
                                        <small>Translate</small>
    
                                    </div>
    
                                    <div class="icons align-items-center">
                                        <i class="fa fa-user-plus text-muted"></i>
                                        <i class="fa fa-star-o text-muted"></i>
                                        <i class="fa fa-check-circle-o check-icon text-primary"></i>
    
                                    </div>
    
                                </div>
                            </div>
                        <% end%>
                        <div class="d-md-flex justify-content-md-end">
                            </br>
                            <%= link_to "New comment", new_comment_path(@post), class: "btn btn-primary", type:"button" %>
                        </div>
                    </div>
                </div>
                 <!--Comments block end here Here-->
            </div>
        </div>
    </div>
</div>
