<div class="my-3 p-3 bg-body rounded shadow-sm">
  <h6 class="border-bottom pb-2 mb-0">Recent public tweets</h6>
  
  <% @posts.each do |post|%>
    <%= link_to post_path(post), class: "visually hidden" do %>
      <% if post.parent_id == nil%>
        <div class="d-flex text-muted pt-3">
        <svg class="bd-placeholder-img flex-shrink-0 me-2 rounded" 
        width="32" height="32" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: 32x32" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#007bff"></rect><text x="50%" y="50%" fill="#007bff" dy=".3em">32x32</text></svg>
        <p class="pb-3 mb-0 small lh-sm">
          <strong class="d-block text-gray-dark">@username_in_next_assignment</strong>
         
          <%= post.content%>
          
        </p>
    </div>
      <% end %>
    <% end %>  
  <% end%>
  <!--<small class="d-block text-end mt-3">-->
<!--  <a href="#">All updates</a>-->
<!--</small>-->
</div>
<%= link_to "New tweet", new_post_path, class: "btn btn-primary btn-lg", type:"button" %>



