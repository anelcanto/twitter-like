<div class="my-3 p-3 bg-body rounded shadow-sm">
  <h6 class="border-bottom pb-2 mb-0">Recent public tweets</h6>
  
  <% @posts.each do |post|%>
  <div class="card">
    <h5 class="card-header">Featured</h5>
    <div class="card-body">
      <h5 class="card-title">Mood: <%=post.mood%> | Country: <%=post.country%></h5>
      <p class="card-text"><%=post.content%></h5></p>
      <%= link_to "Show", post_path(post.id), class: "btn btn-primary"%>
    </div>
  </div>
  <br>
  <% end%>
  
</div>


<div class="d-grid gap-2">
  <%= link_to "New tweet", new_post_path, class: "btn btn-primary", type:"button" %>
</div>
</br>
